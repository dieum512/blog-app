<div class="container">

    <div class="posts">

<div class="top-info">
      <b>Post: <%= @index %> <%=link_to @users.name, "/users" %></b>

      <div class="coutner-cont-posts">
      <h6>Comments: <%= @post.comments.count %></h6>
      <h6>Likes: <%= @post.likes.count %></h6>
      </div>
</div>
<p class="post-text">
<%= @post.text %>
</p>
            <% @post.comments.each do |comment| %>
  <p><%= comment.author.name %>: <%= comment.text %></p>
<% end %>
</div>


</div>